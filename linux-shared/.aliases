# dirs
if [ -n "$ZSH_VERSION" ]; then
  ## Changing/making/removing directory
  setopt auto_pushd
  setopt pushd_ignore_dups
  setopt pushdminus
  alias -g ...='../..'
  alias -g ....='../../..'
  alias -g .....='../../../..'
  alias -g ......='../../../../..'

  compdef _dirs d
fi

