piscan() {
  sudo nmap -sP 192.168.1.0/24 | awk '/^Nmap/{ip=$NF}/B8:27:EB/{print ip}'
}

take() {
  mkdir -p "$@" && cd "${@:$#}" || return
}

swap() {
  [[ ! -n $1 ]] || [[ ! -n $2 ]] && echo "Not enough arguments!" && return 1
  local TMPFILE=tmp.$$
  mv "$1" ${TMPFILE} && mv "$2" "$1" && mv ${TMPFILE} "$2"
}
