kunity() {
  pss "[E]ditor/Unity " | awk '{ print $2 }' | xargs kill -9
}

# dirs
## Changing/making/removing directory
setopt auto_pushd
setopt pushd_ignore_dups
setopt pushdminus

alias dirs="dirs -v"
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g ......='../../../../..'
alias -- -='cd -'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'
function d () {
  if [[ -n $1 ]]; then
    dirs "$@"
  else
    dirs -v | head -10
  fi
}
compdef _dirs d

# git
alias glsi="git ls-files -i --exclude-from=.gitignore"
alias g="git status"
alias ga="git add"
alias gs="git show"
alias gd="git diff"
alias gdc="git diff --cached"
alias gss="git status -s"
alias gaa="git add -A"
alias gcm="git commit -m "
alias gp="git log --pretty --oneline --all --graph"
alias ameno="git commit --amen --no-edit"
alias ssync="git submodule sync --recursive && git submodule update --init --recursive"
alias dtags='git log --tags --simplify-by-decoration --pretty="format:%ai %d"'
alias gdm='git diff master@{1} master'

